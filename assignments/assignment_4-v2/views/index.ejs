<section class="offer-section">
    <!-- Background image -->
    <img src="/assets/top-background.webp" alt="" class="background-image">
    
    <div class="offer-content">
        <h1>Brighten Your Day</h1>
        <div class="offers">
            <div class="offer">
                <h2>SAVE £10</h2>
                <p>When you spend £50</p>
            </div>
            <div class="divider"></div>
            <div class="offer">
                <h2>SAVE £25</h2>
                <p>When you spend £100</p>
            </div>
            <div class="divider"></div>
            <div class="offer">
                <h2>SAVE £40</h2>
                <p>When you spend £150</p>
            </div>
        </div>
        <div class="terms">
            <p>Includes Sale items | <a href="#">T&Cs apply</a></p>
        </div>
    </div>
</section>

<nav class="category-nav">
    <div class="category-links">
        <% products.categories.forEach(category => { %>
            <a href="/products?category=<%= category.slug %>"><%= category.name %></a>
        <% }) %>
    </div>
</nav>

<section class="video-section">
    <video autoplay loop muted class="background-video">
        <source src="/assets/1st-video.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="video-content">
        <p class="collection-label">NEW COLLECTION</p>
        <h2 class="collection-title">Primary Palette</h2>
        <div class="collection-buttons">
            <a href="/products?category=womens" class="collection-button">NEW WOMEN'S</a>
            <a href="/products?category=mens" class="collection-button">NEW MEN'S</a>
        </div>
    </div>
</section>

<section class="featured-categories">
    <div class="featured-container">
        <% products.featured.forEach(product => { %>
            <div class="featured-item">
                <a href="/products?category=<%= product.category %>" class="featured-link">
                    <img src="<%= product.image %>" alt="<%= product.description %>" class="featured-image">
                    <span class="category-name"><%= product.name %></span>
                </a>
            </div>
        <% }) %>
    </div>
</section>

<section class="carousel-section">
    <div class="carousel-container">
        <% products.carousel.forEach((slide, index) => { %>
            <div class="carousel-slide <%= index === 0 ? 'active' : '' %>" id="slide<%= index + 1 %>">
                <img src="<%= slide.image %>" alt="<%= slide.title %>" class="carousel-image">
                <div class="carousel-content">
                    <% if (slide.subtitle) { %>
                        <p class="carousel-subtitle"><%= slide.subtitle %></p>
                    <% } %>
                    <h2 class="carousel-title"><%= slide.title %></h2>
                    <a href="<%= slide.link %>" class="carousel-button"><%= slide.buttonText %></a>
                </div>
                <% if (index > 0) { %>
                    <button class="carousel-nav prev" aria-label="Previous slide">&#10094;</button>
                <% } %>
                <% if (index < products.carousel.length - 1) { %>
                    <button class="carousel-nav next" aria-label="Next slide">&#10095;</button>
                <% } %>
            </div>
        <% }) %>
        
        <div class="carousel-dots">
            <% products.carousel.forEach((slide, index) => { %>
                <span class="carousel-dot <%= index === 0 ? 'active' : '' %>" data-slide="<%= index + 1 %>"></span>
            <% }) %>
        </div>
    </div>
</section>

<section class="choices-section">
    <div class="choices-container">
        <h2 class="choices-title">Making Our Choices Matter</h2>
        <p class="choices-subtitle">
            <a href="#" class="blog-link">Visit the blog</a> for more style inspiration and stories from Cornwall.
        </p>
        
        <div class="choices-grid">
            <div class="choices-item">
                <a href="#" class="choices-link">
                    <img src="/assets/findAShop.avif" alt="Seasalt Cornwall storefront" class="choices-image">
                    <span class="choices-label">Find a Shop</span>
                </a>
            </div>
            
            <div class="choices-item">
                <a href="#" class="choices-link">
                    <img src="/assets/ImpactReport.avif" alt="Striped fabric detail" class="choices-image">
                    <span class="choices-label">Read our impact report</span>
                </a>
            </div>
            
            <div class="choices-item">
                <a href="#" class="choices-link">
                    <img src="/assets/Inspiration.avif" alt="Person browsing in a bookstore" class="choices-image">
                    <span class="choices-label">Inspiration</span>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="newsletter-section" id="newsletter">
    <div class="newsletter-container">
        <h2 class="newsletter-title">Join Seasalt Friends</h2>
        <p class="newsletter-subtitle">
            Join our community and hear more about our new collections, competitions and share our love of Cornwall.
        </p>
        
        <div class="newsletter-form-container">
            <form class="newsletter-form" action="/newsletter" method="POST">
                <input type="email" name="email" placeholder="Enter your email address" class="newsletter-input" required>
                <button type="submit" class="newsletter-button">SIGN UP NOW</button>
            </form>
        </div>
        
        <div class="newsletter-privacy">
            <p class="privacy-text">
                By signing up to become a Seasalt Friend you agree to email marketing. For more information please read our <a href="#" class="privacy-link">privacy policy.</a>
            </p>
            <p class="privacy-text">
                This site is protected by reCAPTCHA and the Google <a href="#" class="privacy-link">Privacy Policy</a> and <a href="#" class="privacy-link">Terms of Service</a> apply.
            </p>
        </div>
    </div>
</section>
